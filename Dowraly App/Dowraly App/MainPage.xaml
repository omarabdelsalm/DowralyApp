<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             BackgroundColor="Azure"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:MTAdmob="clr-namespace:MarcTron.Plugin.Controls;assembly=Plugin.MtAdmob"
             x:Class="Dowraly_App.MainPage">

    <StackLayout>
        <StackLayout>
            <MTAdmob:MTAdView x:Name="bannerAd_view" HeightRequest="50" VerticalOptions="EndAndExpand"/>

        </StackLayout>
        <Image Source="drawable/logo_size.jpg"/>
        <Button x:Name="ReData" Clicked="Button_Clicked" CornerRadius="50" BackgroundColor="LightSlateGray"/>
        <Button x:Name="SeData" Clicked="Button_Clicked_1" CornerRadius="50"  BackgroundColor="Fuchsia"/>
        <Button x:Name="WebSearch" Clicked="Button_Clicked_2" CornerRadius="50" BackgroundColor="Beige"/>
        <Button x:Name="ImeSearch" Clicked="ImeSearch_Clicked" CornerRadius="50" BackgroundColor="DarkCyan"/>
        <StackLayout>
            <MTAdmob:MTAdView x:Name="bannerAd_view2" HeightRequest="50" VerticalOptions="EndAndExpand"/>

        </StackLayout>
    </StackLayout>

</ContentPage>
